<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:TickTockView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_timing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fzuclover.putmedown.businessmodule.timing.TimingActivity">

    <com.fzuclover.putmedown.view.TickTockView
        android:id="@+id/count_down_view"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginTop="40dp"
        TickTockView:tickTextColor="@color/base_color"
        TickTockView:tickFillRingColor="@color/base_color"
        TickTockView:tickCircleDuration="total_time"
        android:layout_gravity="center"
        />
    <Button
        android:id="@+id/stop_timing_btn"
        android:layout_width="143dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:background="@drawable/corner_blue"
        android:textColor="@color/white"
        android:textSize="21sp"
        android:text="@string/stop"/>


</LinearLayout>
