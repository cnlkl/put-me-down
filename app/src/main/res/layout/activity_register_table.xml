<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/image1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/pmd"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/register_phonenum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入手机号"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:met_floatingLabel="normal"
                app:met_floatingLabelText="帐号"
                app:met_singleLineEllipsis="true"
                />
        </LinearLayout>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/register_checknum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入验证码"
                android:inputType="textPassword"
                android:textSize="18dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:met_floatingLabel="normal"
                app:met_floatingLabelText="验证码"
                app:met_singleLineEllipsis="true"
                app:met_maxCharacters="16"
                />
            <Button
                android:id="@+id/register_get_checknum"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_column="1"
                android:background="@drawable/base_button_k"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:text="获取验证码"
                android:layout_marginLeft="22dp"
                android:layout_marginStart="22dp"
                />
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/register_newsecret"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入新密码"
                android:textSize="18dp"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:met_floatingLabel="normal"
                app:met_floatingLabelText="新密码"
                app:met_singleLineEllipsis="true"
                />
        </LinearLayout>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/register_checksecret"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请再次输入新密码"
                android:textSize="18dp"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:met_floatingLabel="normal"
                app:met_floatingLabelText="确认密码"
                app:met_singleLineEllipsis="true"
                />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/register_submit"
                android:layout_width="100dp"
                android:layout_height="36dp"
                android:background="@drawable/base_button_k"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginLeft="110dp"
                android:layout_marginBottom="5dp"
                android:textSize="16dp"
                android:text="注册"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>

