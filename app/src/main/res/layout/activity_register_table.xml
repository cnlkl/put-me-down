<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16dp"
        android:textColor="@color/base_textColor"
        android:layout_below="@+id/phone"
        android:layout_alignLeft="@+id/phone"
        android:layout_alignStart="@+id/phone"
        android:layout_marginTop="28dp" />

    <TextView
        android:id="@+id/secret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16dp"
        android:textColor="@color/base_textColor"
        android:layout_alignTop="@+id/forgot_password_newsecret"
        android:layout_alignLeft="@+id/nsecret"
        android:layout_alignStart="@+id/nsecret" />

    <com.rengwuxian.materialedittext.MaterialEditText

        app:met_underlineColor="#5b9ef4"
        android:textColorHint="@color/gray"
        android:id="@+id/forgot_password_newsecret"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:hint="请确认密码"
        android:textSize="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/forgot_password_checksecret"
        android:layout_toRightOf="@+id/secret"
        android:layout_toEndOf="@+id/secret" />

    <com.rengwuxian.materialedittext.MaterialEditText

        app:met_underlineColor="#5b9ef4"
        android:textColorHint="@color/gray"
        android:hint="请输入手机号"
        android:id="@+id/forgot_password_phonenum"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_alignTop="@+id/phone"
        android:layout_alignLeft="@+id/forgot_password_checknum"
        android:layout_alignStart="@+id/forgot_password_checknum" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16dp"
        android:textColor="@color/base_textColor"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/nsecret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16dp"
        android:textColor="@color/base_textColor"
        android:layout_below="@+id/forgot_password_checknum"
        android:layout_alignLeft="@+id/check"
        android:layout_alignStart="@+id/check" />

    <Button
        android:id="@+id/get_checknum"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_column="1"
        android:background="@drawable/base_button_k"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:text="获取验证码"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_below="@+id/check"
        android:layout_toRightOf="@+id/forgot_password_checknum"
        android:layout_toEndOf="@+id/forgot_password_checknum" />

    <com.rengwuxian.materialedittext.MaterialEditText

        app:met_underlineColor="#5b9ef4"
        android:textColorHint="@color/gray"
        android:hint="请输入验证码"
        android:id="@+id/forgot_password_checknum"
        android:layout_width="120dp"
        android:textSize="16dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/check"
        android:layout_alignLeft="@+id/forgot_password_checksecret"
        android:layout_alignStart="@+id/forgot_password_checksecret" />

    <com.rengwuxian.materialedittext.MaterialEditText

        app:met_underlineColor="#5b9ef4"
        android:textColorHint="@color/gray"
        android:id="@+id/forgot_password_checksecret"
        android:hint="请设置密码"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_below="@+id/forgot_password_checknum"
        android:layout_alignLeft="@+id/forgot_password_newsecret"
        android:layout_alignStart="@+id/forgot_password_newsecret" />

    <Button
        android:id="@+id/forgot_password_submit"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:background="@drawable/base_button_k"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:text="注册"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/forgot_password_newsecret"
        android:layout_alignRight="@+id/forgot_password_newsecret"
        android:layout_alignEnd="@+id/forgot_password_newsecret"
        android:layout_marginRight="57dp"
        android:layout_marginEnd="57dp" />
</RelativeLayout>

