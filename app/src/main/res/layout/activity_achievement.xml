<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.fzuclover.putmedown.features.achievement.AchievementActivity">
        
        <android.support.design.widget.TabLayout
            android:id="@+id/achievement_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="@color/base_color"
            app:tabSelectedTextColor="@color/base_color"
            app:tabTextColor="@color/gray"
            />

        <LinearLayout
            android:id="@+id/share_Layout"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginRight="5dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/white_logo"
                    />

                <TextView
                    android:text="分享"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/achievement_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</LinearLayout>
